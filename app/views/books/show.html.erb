<dl>
    <dt>ID</dt> 
    <dd><%= @id %></dd>
    <dt>Title</dt>
    <dd><%= @book.title %></dd>
    <dt>Author</dt>
    <dd><%= @book.author %></dd>
    <dt>Price</dt>
    <dd><%= number_to_currency(@book.price_cents/100) %></dd>
    <dt>Qty Avail</dt>
    <dd><%= @book.quantity %></dd>
    <dt>Description</dt>
    <dd><%= @book.description %></dd>
</dl>